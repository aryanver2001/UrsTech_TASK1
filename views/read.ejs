<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
</head>
<body>
    <div class="bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Create New Contact</a>
        </div>
        <% if(users.length >0){ %>
            <h1 class="text-3xl tracking-tighter mb-3">All Contacts</h1>
            <div class="contacts flex gap-3 flex-wrap">
                <% users.forEach(function(user){ %>
                    <div class="contact w-72 p-4 bg-zinc-800 rounded-lg">
                        <h5 class="tracking-tighter">Contact_Id: <%= user.contact_id %></h5>
                        <h3 class="text-xl tracking-tighter"><%= user.first_name %> <%= user.last_name %></h3>
                        <h5><%= user.email %></h5>
                        <h5><%= user.mobile_number %></h5>
                        <div class="flex gap-3 mt-5">
                            <a class="text-blue-500" href="/edit/<%= user.contact_id %>">Edit Contact</a>
                            <a class="text-red-500" href="/delete/<%= user.contact_id %>">Delete Contact</a>
                        </div>
                    </div>
            <% }) %>
            </div>
        <% } else{ %>
            <h3 class="text-white">No Contacts Yet!</h3>
        <% } %>
        
    </div>
</body>
</html>